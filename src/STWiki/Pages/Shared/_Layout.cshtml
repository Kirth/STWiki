<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STWiki</title>
    <base href="~/" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="css/site.css" rel="stylesheet" />
    <link href="css/dark-theme.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent border-bottom">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand fw-bold d-flex align-items-center" href="/main-page">
                    <i class="bi bi-journal-text me-2" style="font-size: 1.5rem;"></i>
                    <span class="fs-4">STWiki</span>
                </a>
                
                <!-- Mobile toggle button -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Collapsible content -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Search bar (centered on desktop, full width on mobile) -->
                    <div class="mx-auto my-2 my-lg-0" style="max-width: 500px; width: 100%;">
                        <form action="/search" method="get" class="position-relative">
                            <div class="input-group">
                                <span class="input-group-text border-end-0">
                                    <i class="bi bi-search text-muted"></i>
                                </span>
                                <input class="form-control border-start-0 ps-0" 
                                       type="search" 
                                       name="q" 
                                       placeholder="Search wiki pages..." 
                                       aria-label="Search">
                            </div>
                        </form>
                    </div>

                    <!-- Dark mode toggle -->
                    <div class="navbar-nav me-3">
                        <button class="btn btn-outline-secondary btn-sm" id="darkModeToggle" title="Toggle dark mode">
                            <i class="bi bi-moon" id="darkModeIcon"></i>
                        </button>
                    </div>

                    <!-- Navigation Links -->
                    <div class="navbar-nav me-3">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-grid-3x3-gap me-1"></i>
                                <span class="d-none d-lg-inline">Browse</span>
                            </a>
                            <ul class="dropdown-menu shadow">
                                <li>
                                    <a class="dropdown-item" href="/recent-changes">
                                        <i class="bi bi-clock-history me-2 text-primary"></i>
                                        Recent Changes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/search">
                                        <i class="bi bi-search me-2 text-success"></i>
                                        Advanced Search
                                    </a>
                                </li>
                                @if (User.Identity?.IsAuthenticated == true && (User.HasClaim("groups", "stwiki-editor") || User.HasClaim("groups", "stwiki-admin")))
                                {
                                <li>
                                    <a class="dropdown-item" href="/media">
                                        <i class="bi bi-file-earmark-image me-2 text-warning"></i>
                                        Media Library
                                    </a>
                                </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/new">
                                        <i class="bi bi-file-plus me-2 text-info"></i>
                                        New Page
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- User section -->
                    <div class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-body" 
                                   href="#" 
                                   role="button" 
                                   data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-2 fs-5"></i>
                                    <span class="d-none d-md-inline">@(User.FindFirst("display_name")?.Value ?? User.FindFirst("name")?.Value ?? "User")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li><h6 class="dropdown-header">@(User.FindFirst("display_name")?.Value ?? User.FindFirst("name")?.Value ?? "User")</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/user/@Uri.EscapeDataString(User.FindFirst("user_slug")?.Value ?? User.Identity.Name ?? "")">
                                            <i class="bi bi-person me-2"></i>
                                            My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/user/@Uri.EscapeDataString(User.FindFirst("user_slug")?.Value ?? User.Identity.Name ?? "")/contributions">
                                            <i class="bi bi-journal-text me-2"></i>
                                            My Contributions
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/user/dashboard">
                                            <i class="bi bi-gear me-2"></i>
                                            Control Panel
                                        </a>
                                    </li>
                                    @if (User.HasClaim("groups", "stwiki-admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" href="/admin/dashboard">
                                                <i class="bi bi-shield-check me-2 text-warning"></i>
                                                Admin Panel
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/Account/Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>
                                            Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            var currentUrl = Context.Request.Path + Context.Request.QueryString;
                            <a href="/Account/Login?returnUrl=@Uri.EscapeDataString(currentUrl)" 
                               class="btn btn-primary btn-sm fw-medium">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main class="container-fluid">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Dark mode functionality
        (function() {
            const darkModeToggle = document.getElementById('darkModeToggle');
            const darkModeIcon = document.getElementById('darkModeIcon');
            const html = document.documentElement;
            
            // Check for saved theme preference or default to system preference
            const savedTheme = localStorage.getItem('theme') || 
                              (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            
            // Apply the theme
            function applyTheme(theme) {
                if (theme === 'dark') {
                    html.setAttribute('data-bs-theme', 'dark');
                    darkModeIcon.className = 'bi bi-sun';
                } else {
                    html.setAttribute('data-bs-theme', 'light');
                    darkModeIcon.className = 'bi bi-moon';
                }
                localStorage.setItem('theme', theme);
            }
            
            // Initialize theme
            applyTheme(savedTheme);
            
            // Toggle theme on button click
            darkModeToggle?.addEventListener('click', function() {
                const currentTheme = html.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                applyTheme(newTheme);
            });
            
            // Listen for system theme changes
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function(e) {
                if (!localStorage.getItem('theme')) {
                    applyTheme(e.matches ? 'dark' : 'light');
                }
            });
        })();
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
