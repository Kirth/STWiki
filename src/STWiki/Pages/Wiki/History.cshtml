@page "/{*slug:regex(.*\\/history$)}"
@model STWiki.Pages.Wiki.HistoryModel
@{
    ViewData["Title"] = $"History - {Model.Page?.Title ?? Model.Slug}";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Page History</h1>
        <div>
            @{
                var pageSlug = Model.Slug.EndsWith("/history", StringComparison.OrdinalIgnoreCase) 
                    ? Model.Slug.Substring(0, Model.Slug.Length - "/history".Length)
                    : Model.Slug;
            }
            <a asp-page="/Wiki/View" asp-route-slug="@pageSlug" class="btn btn-outline-primary">View Page</a>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-page="/Wiki/Edit" asp-route-slug="@pageSlug" class="btn btn-outline-secondary">Edit Page</a>
            }
        </div>
    </div>

    @if (Model.Page == null)
    {
        <div class="alert alert-warning">
            <h4>Page Not Found</h4>
            <p>The page "@Model.Slug" does not exist.</p>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-page="/Wiki/Edit" asp-route-slug="@pageSlug" class="btn btn-primary">Create Page</a>
            }
        </div>
    }
    else
    {
        <div class="mb-3">
            <h3>@Model.Page.Title</h3>
            <p class="text-muted">Created @Model.Page.CreatedAt.ToString("yyyy-MM-dd HH:mm") â€¢ Last updated @Model.Page.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</p>
        </div>

        @if (Model.Revisions?.Any() == true)
        {
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Revision History</h5>
                    <small class="text-muted">
                        Showing @Model.Revisions.Count of @Model.TotalRevisions revisions 
                        (Page @Model.CurrentPage of @Model.TotalPages)
                    </small>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Author</th>
                                    <th>Note</th>
                                    <th>Format</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var revision in Model.Revisions)
                                {
                                    <tr>
                                        <td>@revision.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@Html.UserLink(revision.Author, revision.Author)</td>
                                        <td>@(revision.Note ?? "No notes")</td>
                                        <td>
                                            <span class="badge bg-secondary">@revision.Format</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-page-handler="ViewRevision" asp-route-slug="@Model.Slug" asp-route-revisionId="@revision.Id" 
                                                   class="btn btn-outline-primary btn-sm">View</a>
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                        Diff
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        @{
                                                            var previousRevision = Model.Revisions
                                                                .SkipWhile(r => r.Id != revision.Id)
                                                                .Skip(1)
                                                                .FirstOrDefault();
                                                        }
                                                        @if (previousRevision != null)
                                                        {
                                                            <li>
                                                                <a class="dropdown-item" 
                                                                   asp-page-handler="Diff" 
                                                                   asp-route-slug="@Model.Slug" 
                                                                   asp-route-fromRevisionId="@previousRevision.Id" 
                                                                   asp-route-toRevisionId="@revision.Id">
                                                                    vs Previous
                                                                </a>
                                                            </li>
                                                        }
                                                        <li>
                                                            <a class="dropdown-item" 
                                                               asp-page-handler="Diff" 
                                                               asp-route-slug="@Model.Slug" 
                                                               asp-route-fromRevisionId="@revision.Id" 
                                                               asp-route-toRevisionId="@Model.Revisions.First().Id">
                                                                vs Current
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                @if (User.Identity?.IsAuthenticated == true)
                                                {
                                                    <form method="post" asp-page-handler="Restore" asp-route-slug="@Model.Slug" asp-route-revisionId="@revision.Id" style="display:inline">
                                                        <button type="submit" class="btn btn-outline-warning btn-sm" 
                                                                onclick="return confirm('Are you sure you want to restore this revision? This will create a new revision with the restored content.')">
                                                            Restore
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="Revision history pagination" class="d-flex justify-content-center">
                            <ul class="pagination mb-0">
                                <!-- Previous Page -->
                                <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                                    <a class="page-link" asp-page="/Wiki/History" asp-route-slug="@Model.Slug" asp-route-page="@(Model.CurrentPage - 1)">
                                        <i class="bi bi-chevron-left"></i> Previous
                                    </a>
                                </li>
                                
                                <!-- Page Numbers -->
                                @{
                                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                }
                                
                                @if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-page="/Wiki/History" asp-route-slug="@Model.Slug" asp-route-page="1">1</a>
                                    </li>
                                    @if (startPage > 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }
                                
                                @for (var i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-page="/Wiki/History" asp-route-slug="@Model.Slug" asp-route-page="@i">@i</a>
                                    </li>
                                }
                                
                                @if (endPage < Model.TotalPages)
                                {
                                    @if (endPage < Model.TotalPages - 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" asp-page="/Wiki/History" asp-route-slug="@Model.Slug" asp-route-page="@Model.TotalPages">@Model.TotalPages</a>
                                    </li>
                                }
                                
                                <!-- Next Page -->
                                <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-page="/Wiki/History" asp-route-slug="@Model.Slug" asp-route-page="@(Model.CurrentPage + 1)">
                                        Next <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <p><strong>No revision history available.</strong></p>
                <p>This page may have been created before revision tracking was enabled, or the revision history may have been cleared.</p>
            </div>
        }

        @if (Model.CompareFromRevision != null && Model.CompareToRevision != null)
        {
            <div class="mt-4">
                <h5>
                    Diff: Comparing Changes
                    <small class="text-muted">
                        from @Model.CompareFromRevision.CreatedAt.ToString("yyyy-MM-dd HH:mm") 
                        to @Model.CompareToRevision.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                    </small>
                </h5>
                <div class="d-flex gap-2 mb-3">
                    <div class="badge bg-info">
                        From: @Html.UserLink(Model.CompareFromRevision.Author, Model.CompareFromRevision.Author) (@Model.CompareFromRevision.CreatedAt.ToString("MMM d, HH:mm"))
                    </div>
                    <div class="badge bg-success">
                        To: @Html.UserLink(Model.CompareToRevision.Author, Model.CompareToRevision.Author) (@Model.CompareToRevision.CreatedAt.ToString("MMM d, HH:mm"))
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Content Changes</h6>
                    </div>
                    <div class="card-body p-0">
                        @Html.Raw(Model.DiffHtml)
                    </div>
                </div>
            </div>
        }
        else if (Model.SelectedRevision != null)
        {
            <div class="mt-4">
                <h5>
                    Revision from @Model.SelectedRevision.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                    <small class="text-muted">by @Html.UserLink(Model.SelectedRevision.Author, Model.SelectedRevision.Author)</small>
                </h5>
                @if (!string.IsNullOrWhiteSpace(Model.SelectedRevision.Note))
                {
                    <p class="text-muted mb-3"><strong>Note:</strong> @Model.SelectedRevision.Note</p>
                }
                <div class="card">
                    <div class="card-body">
                        <div class="wiki-content">
                            @Html.Raw(Model.SelectedRevisionContent)
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="mt-4">
            <h5>Current Version</h5>
            <div class="card">
                <div class="card-body">
                    <div class="wiki-content">
                        @Html.Raw(Model.RenderedContent)
                    </div>
                </div>
            </div>
        </div>
    }
</div>

