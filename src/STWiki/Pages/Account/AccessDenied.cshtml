@page "/Account/AccessDenied"
@model STWiki.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="card-title text-danger">Access Denied</h1>
                    <p class="card-text">
                        You don't have permission to access this resource.
                    </p>
                    
                    @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                    {
                        <p class="text-muted">
                            You were trying to access: <code>@Model.ReturnUrl</code>
                        </p>
                    }
                    
                    @if (User.Identity?.IsAuthenticated != true)
                    {
                        <div class="mt-3">
                            <p>Please log in to access this page.</p>
                            <a href="/Account/Login?returnUrl=@System.Web.HttpUtility.UrlEncode(Model.ReturnUrl)" class="btn btn-primary">
                                Log In
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <p>
                                You are logged in as <strong>@User.Identity.Name</strong>, but you don't have 
                                sufficient permissions for this action.
                            </p>
                            <p class="text-muted">
                                You may need Editor or Admin privileges. Contact your administrator if you believe this is an error.
                            </p>
                        </div>
                    }
                    
                    <div class="mt-3">
                        <a href="/wiki" class="btn btn-secondary">Go to Wiki Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>