    private async Task AutoSave()
    {
        if (!IsReady || IsNewPage) return;
        
        try
        {
            var content = await JS.InvokeAsync<string>("getEnhancedEditorContent", _editorId);
            if (string.IsNullOrEmpty(content))
            {
