                    await _editHubConnection.InvokeAsync("RequestDocumentSync", PageId.ToString());
                }
            }
        }
        else
        {
            Console.WriteLine($"‚ö†Ô∏è No backup content found for rollback of operation {operationId}");
        }
    }

