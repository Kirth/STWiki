            var userColor = user?.Color ?? "#6c757d";
            var displayName = user?.DisplayName ?? "Unknown User";
            
            // Call JavaScript directly without InvokeAsync to avoid cancellation
            _ = Task.Run(async () =>
            {
                try
                {
                    await JS.InvokeVoidAsync("updateRemoteCursor", _editorId, cursor.UserId, cursor.Start, cursor.End, userColor, displayName);
                    Console.WriteLine($"‚úÖ [{_editorId}] Updated cursor for {displayName} at {cursor.Start}-{cursor.End}");
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"‚ùå [{_editorId}] Failed to update remote cursor for {displayName}: {ex.Message}");
                }
            });
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error in OnReceiveCursor: {ex.Message}");
        }
        
        return Task.CompletedTask;
    }

