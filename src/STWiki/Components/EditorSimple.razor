                        Console.WriteLine($"‚úÖ Starting collaboration initialization for page {PageId}");
                        await InitializeCollaboration();
                    }
                    else
                    {
                        Console.WriteLine($"‚ùå Collaboration NOT initialized. EnableCollaboration={EnableCollaboration}, IsNewPage={IsNewPage}, PageId={PageId}");
                    }
                    
                    // Start autosave timer for existing pages
