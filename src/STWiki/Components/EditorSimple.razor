                    await _editHubConnection.InvokeAsync("SendCursorUpdate", PageId.ToString(), cursor);
                    
                    // Update last known position
                    _lastCursorStart = currentStart;
                    _lastCursorEnd = currentEnd;
                    
                    Console.WriteLine($"üìç Broadcasted cursor position: {currentStart}-{currentEnd}");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Failed to broadcast cursor: {ex.Message}");
        }
    }

